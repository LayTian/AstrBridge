{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "node16",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

